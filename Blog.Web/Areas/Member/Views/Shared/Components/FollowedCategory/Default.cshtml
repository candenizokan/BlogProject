

@model List<Category>

<div class="text-center">
    <h2>Takip Edilen Kategoriler</h2>
    @if (Model.Count>0)
    {
        foreach (var item in Model)
        {
            <a asp-action="FilterWithCategory" asp-controller="Article" asp-area="Member" asp-route-id="@item.ID">@item.Name</a>
        }

    }
    else
    {
        <h2>Şu an takip edilen kategori yoktur.</h2>
        <h2>Kategorileri incelemek için <a asp-action="List" asp-controller="Category" asp-area="Member">Tıklayınız..</a></h2>
    }
</div>