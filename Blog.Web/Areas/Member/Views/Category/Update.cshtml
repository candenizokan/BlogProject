@model UpdateCategoryDTO


<div class="row">
    <div class="card col-md-8 offset-2">
        
        <div class="card-body">
            <div class="card-text"> Kategori Güncelleme Paneli</div>
            <form asp-action="Update" method="post">
                <div class="form-group">
                    <label asp-for="Name" class="form-control"></label>
                    <input  asp-for="Name" class="form-control" type="text" />
                    <span asp-validation-for="Name" class="text-danger"  ></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="form-control"></label>
                    <input asp-for="Description" class="form-control" type="text"  />
                    <span asp-validation-for="Description"class="text-danger"  ></span>
                </div>
                 <div class="form-group">
                    <input asp-for="ID" type="hidden"  />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-outline-danger" value="Güncelle" />
                </div>
            </form>
        </div>
    </div>
</div>